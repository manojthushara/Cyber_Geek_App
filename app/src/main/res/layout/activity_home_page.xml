<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Page"
    android:background="@color/low_orange">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CYBER GEEK"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="40dp"/>

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To make the cyber world a safer place"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="610dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                                android:layout_width="400dp"
                                android:layout_height="350dp"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="30dp"
                                android:layout_margin="0dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardMaxElevation="12dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/securitybtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="300dp"
                                        android:layout_height="200dp"
                                        android:layout_marginTop="30dp"
                                        android:src="@drawable/secury" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Security Consultancy Service"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="350dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="30dp"
                            android:layout_margin="0dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/vulnerablitiybtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/vulnerability"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Vulnerability Assessment and\nPenetration Testing"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="350dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="30dp"
                            android:layout_margin="0dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/mobilebtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/mobile"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Mobile App Security Testing"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="350dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="30dp"
                            android:layout_margin="0dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/lockbtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/lock"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Identity and Access Management"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="350dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="30dp"
                            android:layout_margin="0dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/networkbtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/network"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Network Access Control (NAC)"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="350dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="30dp"
                            android:layout_margin="0dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/threatbtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/cyber"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Cyber Threat Intelligence"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="400dp"
                            android:layout_height="350dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="30dp"
                            android:layout_margin="0dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/cyberbtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/forensic"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Cyber Forensic Tools"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Let's Get In Touch!"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:text="   Ready to start your next project with us?\n     Give us a call or send us an email and\nwe will get back to you as soon as possible!"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/callbtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_call_24" />

                    <ImageView
                        android:id="@+id/emailbtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/baseline_email_24" />

                    <ImageView
                        android:id="@+id/addressbtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_home_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>